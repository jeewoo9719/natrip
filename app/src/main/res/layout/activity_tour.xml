<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/back"
    tools:context="com.example.chanyoung.nattrip.TourActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/tourcontainer"
        android:layout_width="384dp"
        android:layout_height="453dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/guideID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="0dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="370dp"/>

        <TextView
            android:id="@+id/tourName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="100dp"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/tourDetail"
            android:layout_width="fill_parent"
            android:layout_height="126dp"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_marginTop="370dp"/>

        <TextView
            android:id="@+id/guideEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="130dp" />

        <TextView
            android:id="@+id/guideName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/tourImage1"
            android:layout_width="229dp"
            android:layout_height="130dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="70dp"/>


        <ImageView
            android:id="@+id/tourImage2"
            android:layout_width="190dp"
            android:layout_height="130dp"
            android:layout_marginTop="230dp"/>

        <ImageView
            android:id="@+id/tourImage3"
            android:layout_width="190dp"
            android:layout_height="130dp"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="195dp"/>

        <Button
            android:id="@+id/btnReservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="예약하기"
            android:textSize="10dp"
            android:layout_marginLeft="300dp"/>


    </android.support.design.widget.CoordinatorLayout>



    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/menu_nav" />

</android.support.design.widget.CoordinatorLayout>

